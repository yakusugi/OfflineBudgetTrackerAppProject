<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.myproject.offlinebudgettrackerappproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OfflineBudgetTrackerAppProject">
        <activity
            android:name=".QuickStoreSearchActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".QuickProductTypeSearchActivity"
            android:exported="false" />
        <activity
            android:name=".QuickProductNameSearchActivity"
            android:exported="false" />
        <activity
            android:name=".IncomeCategorySearchActivity"
            android:exported="false" />
        <activity
            android:name=".BudgetTrackerIncomesActivity"
            android:exported="false" />
        <activity
            android:name=".BudgetTrackerBankingActivity"
            android:exported="false" />
        <activity
            android:name=".SpendingReplacementActivity"
            android:exported="false" />
        <activity
            android:name=".IncomeReplacementActivity"
            android:exported="false" />
        <activity
            android:name=".AddBudgetTracker"
            android:exported="false" />
        <activity
            android:name=".SpendingTrackerActivity"
            android:exported="false" />
        <activity
            android:name=".AboutActivity"
            android:exported="false" />
        <activity
            android:name=".BudgetTrackerSettingsActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" /> <!-- android:windowSoftInputMode="adjustResize" -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>