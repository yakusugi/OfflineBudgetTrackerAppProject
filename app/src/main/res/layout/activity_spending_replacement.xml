<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpendingReplacementActivity">

    <RelativeLayout
        android:id="@+id/replace_title"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        tools:ignore="MissingConstraints"
        >

        <TextView
            android:id="@+id/title_replace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modify mistyped words"
            android:textSize="22sp" />

        <TextView
            android:layout_marginTop="6dp"
            android:layout_below="@+id/title_replace"
            android:text="Your money, your life"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:src="@drawable/replace"
            android:layout_width="62dp"
            android:layout_height="62dp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>